 switch daysInMonth (month) {
    switch (month) {
        case 1:
        case 3:
        case 5:
        case 7:
        case 8:
        case 10:
        case 12:
            return 31;
        case 4:
        case 6:
        case 9:
        case 11:
            return 30;
        case 2:
            return 28;
        default:
            return "Invaliud Month"; 
    }  
}

// assignment 2 arrays and loops

function sumArray(arr) {
    if (arr.length === 0) {
      return 0;
    }
    const sum = arr.reduce((accumulator, current) => accumulator + current, 0);
    return sum; 
  }
 
  //OR 

  function sumArray (numbers) {
    let sum = 0;

    for (let i = 0; i < numbers.length; i++) {
        sum += numbers[i];
    }
    return sum;
  }
  // 

  function countSmilies(message) {
    let count = 0
    const smiley = ':)'; 

  
    for (let i = 0; i < message.length; i++) {
       
        if (message[i] === smiley[0] && message[i + 1] === smiley[1]) {
            count++; 
            i++;
        }
    }

    return count; 
}

// or 

