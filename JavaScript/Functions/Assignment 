      //

      function filterPizzas(pizzas) {
        const filteredPizzas = [];
        
        for (let i = 0; i < pizzas.length; i++) {
          const pizza = pizzas[i];
          
          if (pizza.type !== "pineapple") {
            filteredPizzas.push(pizza);
            
          }
        }
        
        return filteredPizzas;
      }

      // or 

      function filterPizzas(pizzas) {

        return pizzas.filter(pizza => pizza.type !== 'pineapple');
      }

      // assignment js functions 

      //calculate hours per day worked and days worked

      function calculateHours (hoursPerDay, days) {
        const totalHours = hoursPerDay * days;
        return totalHours;
      }
      
      // convert miles to kilometers 

      function milesToKilometers (miles){
        if (miles === undefined){
          return 1.60934;
        }
        
        const kilometers = miles * 1.60934
        
        return kilometers;
      }

      /* assesment 5 data types loops and conditionals
       loop over the array arr, and check each number in the array if it is even or odd number
       the function should return an array containing only odd numbers
       if no odd numbers are present in the array arr, the function should return
       an empty array */
 
         function pickOdd (arr) {
          const pickOdd = [];
          
          for (let i = 0; i < arr.length; i++) {
             const number = arr[i];
             
             if (number % 2 !== 0) {
                pickOdd.push(number);
             }
          }
          
          return pickOdd;
        }

