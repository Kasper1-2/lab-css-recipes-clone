/* implement the function sortProducts that takes one parameter matrix, which is an array of arrays
example of matrix 
category 'tech', procut 'iphone', price 1000
inside the matrix array, each nested array holds objets, each object represents a product
the function should loop over the matrix and create a new object conatining the products sorted by category
the function should then return back this result object containing sorted products, stored in properties tech and food
the result object should have the following structure 
{
 tech:  [ { tech product }, { tech product } ],
 food:  [ { food product }, { food product } ],
} */

 function sortProducts(matrix) {
    const result = {
      tech: [],
      food: []
    };
  
    // Loop through each inner array in the matrix
    for (let i = 0; i < matrix.length; i++) {
      const products = matrix[i]; // Access the inner array
  
      // Loop through each product in the inner array
      for (let j = 0; j < products.length; j++) {
        const product = products[j];
  
        // Sort products based on their category
        if (product.category === 'tech') {
          result.tech.push(product);
        } else if (product.category === 'food') {
          result.food.push(product);
        }
      }
    }
  
    return result;
  }
  
  // Example input
  const inputMatrix = [
    [
      { category: 'tech', product: "iPhone X", price: 320 },
      { category: 'food', product: "Cheerios", price: 5 },
    ],
    [
      { category: 'food', product: "Snickers", price: 1.5 },
      { category: 'tech', product: "Air Pods", price: 129 },
    ],
  ];

  
  
 
  